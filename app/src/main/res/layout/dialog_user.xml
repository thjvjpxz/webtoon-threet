<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="25dp">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt biệt danh"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập biệt danh"
                android:fontFamily="@font/nunito"
                android:textSize="15sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="7dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_radius_dialog"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btnDestroy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hủy"
                    android:textAllCaps="false"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_gray_radius"
                    android:fontFamily="@font/nunito_bold" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="Xác nhận"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_pink_radius_2"
                    android:fontFamily="@font/nunito_bold"
                    android:elevation="4dp"
                    android:translationZ="4dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>